{
  "name": "web",
  "version": "0.0.0",
  "description": "Very simple static site generator",
  "main": "index.js",
  "scripts": {
    "build-cal": "node yaml2table.js calendario.yml calendario.md",
    "build-md": "node md2html.js '*.md'",
    "build-lay": "node renderLayout.js '*.html' layout.mustache index.html",
    "watch": "onchange '*.mustache' -- npm run build",
    "serve": "browser-sync --files '*.html,*.css'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fast-glob": "^3.2.5",
    "js-yaml": "^4.0.0",
    "mustache": "^4.1.0",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "onchange": "^7.1.0",
    "browser-sync": "^2.26.14"
  }
}
