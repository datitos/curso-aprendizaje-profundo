{
  "name": "web",
  "version": "0.0.0",
  "description": "Very simple static site generator",
  "main": "index.js",
  "scripts": {
    "build-md": "node scripts/md2html.js '*.md' tmp",
    "build-cal": "node scripts/yaml2table.js calendario.yml tmp",
    "build-lay": "node scripts/renderLayout.js 'tmp/*.html' layout.mustache build/index.html",
    "watch": "onchange '*.mustache' -- npm run build",
    "serve": "browser-sync --files '*.html,*.css'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fast-glob": "^3.2.5",
    "js-yaml": "^4.0.0",
    "mustache": "^4.1.0",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "onchange": "^7.1.0",
    "browser-sync": "^2.26.14"
  }
}
